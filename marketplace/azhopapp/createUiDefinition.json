{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [ 
			{
                "name": "azhopResourceGroup",
                "type": "Microsoft.Common.TextBox",
                "label": "Azhop Resource Group",
                "defaultValue": "",
                "toolTip": "",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
				"name": "autogeneratePasswordsAndKeys",
                "type": "Microsoft.Common.CheckBox",
                "label": "Autogenerate keypair and passwords",
                "defaultValue": true,
                "toolTip": "Keypair and passwords can be retrieved from keyvault after deploying.",
                "constraints": {
                    "required": false,
                    "validationMessage": ""
                }
            },
            {
                "name": "adminUser",
                "type": "Microsoft.Common.TextBox",
                "label": "Admin User",
                "defaultValue": "",
                "toolTip": "Admin user for the Virtual Machines.",
                "constraints": {
                    "required": true,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "homedirMountpoint",
                "type": "Microsoft.Common.TextBox",
                "label": "Homedir Mountpoint",
                "defaultValue": "/anfhome",
                "toolTip": "Home directory mountpoint on the VMs.",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "adminSshPublicKeyParam",
                "type": "Microsoft.Common.TextBox",
                "label": "Admin Ssh Public Key",
                "toolTip": "SSH Public Key for the Virtual Machines.",
                "constraints": {
                    "required": "[basics('autogeneratePasswordsAndKeys')]",
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": "[not(basics('autogeneratePasswordsAndKeys'))]"
            },
            {
                "name": "adminSshPrivateKeyParam",
                "type": "Microsoft.Common.TextBox",
                "label": "Admin Ssh Private Key",
                "toolTip": "SSH Private Key for the Virtual Machines.",
                "multiLine": true,
                "constraints": {
                    "required": "[basics('autogeneratePasswordsAndKeys')]",
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": "[not(basics('autogeneratePasswordsAndKeys'))]"
            },
            {
                "name": "adminPasswordParam",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "password": "Admin Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": "The Windows/Active Directory password.",
                "constraints": {
                    "required": "[basics('autogeneratePasswordsAndKeys')]",
                    "regex": "",
                    "validationMessage": ""
                },
                "options": {
                    "hideConfirmation": true
                },
                "visible": "[not(basics('autogeneratePasswordsAndKeys'))]"
            },
            {
                "name": "slurmAccountingAdminUser",
                "type": "Microsoft.Common.TextBox",
                "label": "Slurm Accounting Admin User",
                "defaultValue": "sqladmin",
                "toolTip": "Slurm accounting admin user",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "slurmAccountingAdminPasswordParam",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "password": "Slurm Accounting Admin Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": "Password for the Slurm accounting admin user",
                "constraints": {
                    "required": "[basics('autogeneratePasswordsAndKeys')]",
                    "regex": "",
                    "validationMessage": ""
                },
                "options": {
                    "hideConfirmation": true
                },
                "visible": "[not(basics('autogeneratePasswordsAndKeys'))]"
            },
            {
                "name": "branchName",
                "type": "Microsoft.Common.TextBox",
                "label": "Branch Name",
                "defaultValue": "main",
                "toolTip": "Branch of the azhop repo to pull - Default to main",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            }
		],
        "steps": [
            {
                "name": "scheduler",
                "label": "Scheduler",                
                "subLabel": {
                    "preValidation": "Configure your scheduler settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Scheduler Settings",
                "elements": [

                ]
            }
        ],
        "outputs": {
            "azhopResourceGroup": "[basics('azhopResourceGroup')]",
            "autogeneratePasswordsAndKeys": "[basics('autogeneratePasswordsAndKeys')]",
            "adminUser": "[basics('adminUser')]",
            "homedirMountpoint": "[basics('homedirMountpoint')]",
            "adminSshPublicKeyParam": "[if(basics('autogeneratePasswordsAndKeys'),'',basics('adminSshPublicKeyParam'))]",
            "adminSshPrivateKeyParam": "[if(basics('autogeneratePasswordsAndKeys'),'',basics('adminSshPrivateKeyParam'))]",
            "adminPasswordParam": "[if(basics('autogeneratePasswordsAndKeys'),'',basics('adminPasswordParam'))]",
            "slurmAccountingAdminUser": "[basics('slurmAccountingAdminUser')]",
            "slurmAccountingAdminPasswordParam": "[if(basics('autogeneratePasswordsAndKeys'),'',basics('slurmAccountingAdminPasswordParam'))]",
            "branchName": "[basics('branchName')]"
        }
    }
}
